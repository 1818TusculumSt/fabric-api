# MCPO Configuration
# Copy this file to .env and customize the values

# Port for the MCPO server
MCPO_PORT=8000

# API key for authentication
# Leave empty or comment out for NO AUTHENTICATION (open access)
# Set to a secure value for API key authentication
MCPO_API_KEY=

# Examples:
# No auth (anyone can access):
#   MCPO_API_KEY=
# With auth (requires API key in requests):
#   MCPO_API_KEY=your-secret-api-key-here

# Fabric Pattern Cache Settings
# How often to check for pattern updates (in hours)
FABRIC_CACHE_TTL_HOURS=24

# Automatically update patterns when cache expires
FABRIC_AUTO_UPDATE=true
